@{
    ViewData["Title"] = "Settings";
    Layout = "_AdminLayout";
    
}

@Html.AntiForgeryToken()

<div class="settings-container">
    <div class="page-header">
        <h1>Settings</h1>
        <button type="submit" class="btn btn-primary" id="saveSettingsBtn">
                <i class="fas fa-save"></i> Save Changes
            </button>
    </div>

    <div class="settings-grid">
        <div class="settings-panel">
            <h2><i class="fas fa-globe"></i> General Settings</h2>
            <div class="form-group">
                <label>Site Title</label>
                <input type="text" class="form-control" value="Modern CMS" />
            </div>
            <div class="form-group">
                <label>Site Description</label>
                <textarea class="form-control">A modern content management system</textarea>
            </div>
            <div class="form-group">
                <label>Time Zone</label>
                <select class="form-control">
                    <option>UTC</option>
                    <option>UTC+1</option>
                    <option>UTC-5</option>
                </select>
            </div>
        </div>

        <div class="settings-panel">
            <h2><i class="fas fa-palette"></i> Appearance</h2>
            <div class="form-group">
                <label>Theme</label>
                <select class="form-control">
                    <option>Dark Theme</option>
                    <option>Light Theme</option>
                </select>
            </div>
            <div class="form-group">
                <label>Primary Color</label>
                <input type="color" class="form-control" value="#3498db" />
            </div>
            <div class="form-group">
                <label>Logo</label>
                <div class="file-upload">
                    <input type="file" class="form-control" />
                </div>
            </div>
        </div>

        <div class="settings-panel">
            <h2><i class="fas fa-shield-alt"></i> Security</h2>
            <div class="form-group">
                <label>Session Timeout (minutes)</label>
                <input type="number" class="form-control" value="30" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input type="checkbox" id="2fa" checked />
                    <label for="2fa">Enable Two-Factor Authentication</label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input type="checkbox" id="failedLogin" checked />
                    <label for="failedLogin">Lock account after 5 failed attempts</label>
                </div>
            </div>
        </div>

        <div class="settings-panel">
            <h2><i class="fas fa-envelope"></i> Email Settings</h2>
            <div class="form-group">
                <label>SMTP Server</label>
                <input type="text" class="form-control" placeholder="smtp.example.com" />
            </div>
            <div class="form-group">
                <label>SMTP Port</label>
                <input type="number" class="form-control" value="587" />
            </div>
            <div class="form-group">
                <label>Email From</label>
                <input type="email" class="form-control" placeholder="noreply@example.com" />
            </div>
        </div>
    </div>
</div> 